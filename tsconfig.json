{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "declarationMap": true,
    "composite": true
  },
  "include": ["src"],
  "typedocOptions": {
    "name": "Trtl",
    "entryPoints": ["src/index.ts"],
    "excludeExternals": true,
    "excludeNotExported": true,
    "includeVersion": true,
    "out": "./docs"
  },
}
